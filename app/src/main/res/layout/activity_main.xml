<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andy.scripture_reference.MainActivity">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextBk"
        android:textIsSelectable="true"
        android:layout_marginTop="124dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextVs"
        android:inputType="textCapWords|textCapSentences|textAutoComplete|textAutoCorrect|text|textCapCharacters|textMultiLine"
        android:hint="@string/Book" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCh"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:inputType="textCapWords|textCapSentences|textAutoComplete|textAutoCorrect|text|textCapCharacters"
        android:textIsSelectable="true"
        android:hint="@string/Chapter" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextVs"
        android:layout_below="@+id/editTextCh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:inputType="textCapWords|textCapSentences|textAutoComplete|textImeMultiLine|textAutoCorrect|text|textCapCharacters|textMultiLine"
        android:textIsSelectable="true"
        android:hint="@string/Verse" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Send"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:clickable="false"
        android:onClick="sendMessage" />

</RelativeLayout>
